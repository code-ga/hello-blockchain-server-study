{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "skipLibCheck": true,
    // "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": false, //enable strict null checks
    "strictFunctionTypes": false, //enable strict function types
    "noImplicitThis": true,
    "noUnusedLocals": false, // enable
    "noUnusedParameters": false, // enable to see unused parameters
    "noImplicitReturns": false, // enable to see implicit returns
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
